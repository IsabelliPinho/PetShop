    private void jtxtUserNameActionPerformed(java.awt.event.ActionEvent evt) {                                             
        
    }                                            

    private void jbtnExitActionPerformed(java.awt.event.ActionEvent evt) {                                         
          if(JOptionPane.showConfirmDialog(frame,"Tem certeza que deseja sair?","Sair", //bOTÃO  de sair
             JOptionPane.YES_NO_OPTION)==JOptionPane.YES_NO_OPTION){
      System.exit(0);
     }
    }                                        
//botão de resetar
    private void jButton3ActionPerformed(java.awt.event.ActionEvent evt) {                                         
       jtxtUserName.setText(null);
       jPassword.setText(null);
    }                                        

    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
      String senha = jPassword.getText();
      String user = jtxtUserName.getText();
      if (senha.contains("sarna") && (user.contains("cliente"))){
          jtxtUserName.setText(null);
          jPassword.setText(null);
          loading.setVisible(true);
        loading.setDefaultCloseOperation(JFrame.DISPOSE_ON_CLOSE);
      }
      
    }                                        

    private void pwordActionPerformed(java.awt.event.ActionEvent evt) {                                      
     
        if(pword.isSelected()){
        jPassword.setEchoChar((char)0);
    pword.setText("Esconder"); }
        else {jPassword.setEchoChar('\u25cf');
         pword.setText("Mostrar Senha");}
    }                                     

